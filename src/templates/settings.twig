{% import "_includes/forms" as forms %}

{{
  forms.autosuggestField({
    label: 'REX Agency ID',
    instructions: 'The agency ID to query REX for listings.',
    id: 'rexAgencyId',
    name: 'rexAgencyId',
    value: settings['rexAgencyId'],
    suggestEnvVars: true
  })
}}

{{
  forms.autosuggestField({
    label: 'REX Username',
    instructions: 'The email address or username you use to log into REX.',
    id: 'rexUsername',
    name: 'rexUsername',
    value: settings['rexUsername'],
    suggestEnvVars: true
  })
}}

{{
  forms.autosuggestField({
    label: 'REX Password',
    instructions: 'The password you use to log into REX.',
    id: 'rexPassword',
    name: 'rexPassword',
    value: settings['rexPassword'],
    suggestEnvVars: true
    })
}}
